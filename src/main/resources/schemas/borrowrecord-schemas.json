{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BorrowRecord",
  "type": "object",
  "properties": {
    "member": {
      "$ref": "member-schemas.json"
    },
    "book": {
      "$ref": "book-schemas.json"
    },
    "borrowDate": {
      "type": "string",
      "format": "date",
      "description": "The date when the book was borrowed"
    },
    "returnDate": {
      "type": [
        "string",
        "null"
      ],
      "format": "date",
      "description": "The date when the book was returned, null if not yet returned"
    }
  },
    "required": ["member", "book", "borrowDate"],
  "example": [
    {
      "id": "3d8f3aa0-72d1-4eab-8d2b-ccdd1d80d7c2",
      "bookId": "2f63df50-7f67-48f8-9b83-b6a72a1e9c6f",
      "memberId": "7a12c630-98a1-4f22-823a-3f1459caa4e9",
      "borrowDate": "2025-10-04",
      "returnDate": null
    }
  ]
}